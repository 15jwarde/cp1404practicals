                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert m to km'
#        on_press: app.handle_calculate()
    Label:
        id: output_box
        font_size: 48
        text: '0'
        color: (1, 0.82, 0.863, 1)

